<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sample1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sample1.Pages"


    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource Gradient1}"
    Shell.TitleColor="{StaticResource TextColorBlack}"
    Shell.TabBarBackgroundColor="{StaticResource Gradient1}"
    Shell.TabBarTitleColor="{StaticResource TextColorBlack}"
    Shell.TabBarUnselectedColor="{StaticResource TextColorGray}">

    <TabBar>

        <ShellContent Title="Dashboard"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate local:HomePage}" />
        <ShellContent Title="Students"
                      Icon="property.png"
                      ContentTemplate="{DataTemplate local:StudentPage}" />
        <ShellContent Title="Search"
                      Icon="search.png"
                      ContentTemplate="{DataTemplate local:SearchPage}" />
        <ShellContent Title="Settings"
                      Icon="settings.png"
                      ContentTemplate="{DataTemplate local:SettingsPage}" />

    </TabBar>

</Shell>
